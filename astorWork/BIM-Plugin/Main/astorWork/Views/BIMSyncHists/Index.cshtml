@model IEnumerable<astorWork.Models.BIMSyncHist>

@{
    ViewBag.Title = "List of BIM Sync Sessions";
}

<h2>List of BIM Sync Sessions</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Sync Date Time
            </th>
            <th>
                Status
            </th>
            <th>
                Synced Material Count
            </th>
            <th>
                Missed Material Count
            </th>
            <th>
                Visulization
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                User
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.LastSyncDate.Value.ToLocalTime()
                </td>
                @if (item.Status == 0)
                {
                    <td>Full</td>
                }
                else if (item.Status == 1)
                {
                    <td>Partial</td>
                }
                else
                {
                    <td>Error</td>
                }
                <td>
                    @item.SyncedMaterialIds.Split(',').Count()
                </td>
                <td>
                    @item.MissingMaterialIds.Split(',').Count()
                </td>
                @if (string.IsNullOrEmpty(item.VisualizeURL))
                {
                    <td>N.A.</td>
                }
                else
                {
                    <td>
                        @Html.ActionLink("Visualization", "Visualize", new { id = item.ID }, new { @class = "btn btn-info" })
                    </td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Remarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BIMUserInfo.UserName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-default" })
                </td>
            </tr>
        }
    </tbody>

</table>

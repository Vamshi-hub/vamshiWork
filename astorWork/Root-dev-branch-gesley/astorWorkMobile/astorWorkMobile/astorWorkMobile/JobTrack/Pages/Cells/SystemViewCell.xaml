    <Frame BackgroundColor="#d3ebf5" Padding="5" HorizontalOptions="CenterAndExpand" Margin="10,5" HasShadow="False">
        <StackLayout >
            <Label Text="{Binding Message}" TextColor="Black" HorizontalOptions="Center" FontSize="Micro"/>
            <StackLayout  Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="0">
                <Label Text="by " FontSize="Micro"/>
                <Label Text="{Binding UserName}" TextColor="Black" FontSize="Micro"/>
                <Label Text=" at " FontSize="Micro"/>
                <Label x:Name="Timestamp" Text="{Binding Timestamp,StringFormat='{0:dd-MMM-yyyy HH:mm}'}" TextColor="Black" FontSize="Micro"/>
            </StackLayout>
        </StackLayout>
    </Frame>
</ViewCell>
<UserControl x:Class="astorWork_Navisworks.Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:properties="clr-namespace:astorWork_Navisworks.Properties"
             xmlns:local="clr-namespace:astorWork_Navisworks.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Bottom">API Endpoint</TextBlock>
                <TextBox Text="{Binding Path=API_ENDPOINT, Source={x:Static properties:Settings.Default}, Mode=TwoWay}" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
        <Button Width="120" Height="32" Name="btnSave" Click="btnSave_Click" VerticalAlignment="Bottom" Margin="5">Save</Button>
    </Grid>
</UserControl>

@model astorWorkShared.Models.ForgeBucket


<h2> Create Forge Bucket </h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BucketKey" class="control-label">Bucket Name</label>
                <input asp-for="BucketKey" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PolicyKey" class="control-label"></label>
                <select asp-for="PolicyKey"
                        asp-items="Html.GetEnumSelectList<Autodesk.Forge.Model.BucketsItems.PolicyKeyEnum>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
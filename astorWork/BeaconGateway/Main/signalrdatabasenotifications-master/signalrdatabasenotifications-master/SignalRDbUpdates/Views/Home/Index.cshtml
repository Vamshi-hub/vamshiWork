                    "IsQC": true,
                    "QCStatus": "sample string 5",
                    "QCBy": "sample string 6",
                    "QCDate": "2017-12-20T11:29:51.8666223+08:00",
                    "LocationID": 1,
                    "Location": "sample string 7",
                    "RFIDTagID": "sample string 8",
                    "BeaconID": beaconId,
                    "CreatedBy": "sample string 10",
                    "CreatedDate": "2017-12-20T11:29:51.8676233+08:00"
                }
            $.ajax({
                url: url,
                dataType: 'json',
                contentType: 'application/json; charset=UTF-8', // This is the money shot
                data: data,
                type: 'POST'
            });
        }
    </script>
}
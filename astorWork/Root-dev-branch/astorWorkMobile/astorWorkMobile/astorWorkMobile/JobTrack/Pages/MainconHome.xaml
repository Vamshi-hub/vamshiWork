        <Grid Padding="20,50,20,50">
            <StackLayout Spacing="10"  VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                <StackLayout Orientation="Horizontal"  Spacing="10" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
                    <StackLayout Spacing="0" HorizontalOptions="FillAndExpand" >
                        <Frame Padding="0" StyleClass="Tile" CornerRadius="10" HasShadow="True" BackgroundColor="White" BorderColor="Gainsboro">
                            <StackLayout  >
                                <BoxView HeightRequest="10" BackgroundColor="#9e9e9e" CornerRadius="20,20,0,0"></BoxView>
                                <Label Text="{Binding CountUnassignedJobs}"  FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" WidthRequest="200" TextColor="#9e9e9e" FontSize="60" />
                                <Label Text="Un-assigned Jobs"  TextColor="Black" HeightRequest="40" WidthRequest="200"  LineBreakMode="WordWrap" FontSize="15" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                          Command="{Binding FigureCommand}"
                                          CommandParameter="0"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </StackLayout>
                    <StackLayout Spacing="0" HorizontalOptions="FillAndExpand" >
                        <Frame Padding="0" StyleClass="Tile" CornerRadius="10" HasShadow="True" BackgroundColor="White" BorderColor="Gainsboro">

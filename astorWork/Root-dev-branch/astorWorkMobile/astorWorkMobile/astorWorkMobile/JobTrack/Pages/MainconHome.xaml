                                <Label Text="{Binding CountQCPendingJobs}" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" WidthRequest="200" TextColor="#00008B" FontSize="60" />
                                <Label Text="QC Pending Jobs"  TextColor="Black" HeightRequest="40" WidthRequest="200"  LineBreakMode="WordWrap" FontSize="15" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                            </StackLayout>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1"
                                          Command="{Binding FigureCommand}"
                                          CommandParameter="5"/>
                            </Frame.GestureRecognizers>
                        </Frame>
                    </StackLayout>
                </StackLayout>
                <StackLayout Orientation="Horizontal"  Spacing="10" VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">

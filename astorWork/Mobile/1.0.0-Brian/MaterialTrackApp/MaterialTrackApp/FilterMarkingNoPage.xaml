            <StackLayout IsVisible="{Binding IsValueSelectionVisible}">
                <BoxView HeightRequest="2" BackgroundColor="Black" HorizontalOptions="FillAndExpand"/>
                <Grid>
                    <Label VerticalTextAlignment="Center">Select a Marking No.:</Label>
                    <ListView x:Name="listTasks" ItemsSource="{Binding ListMarkingNo}" SelectedItem="{Binding MarkingNo}"
                          ItemSelected="listTasks_ItemSelected" Margin="150,0,0,0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid HorizontalOptions="Center">
                                        <Label Text="{Binding}" StyleClass="Subheader" VerticalTextAlignment="Center"/>
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </StackLayout>
            -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
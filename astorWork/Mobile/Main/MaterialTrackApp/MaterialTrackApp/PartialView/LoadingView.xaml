<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaterialTrackApp.PartialView.LoadingView">
  <ContentView.Content>
        <Grid x:Name="layoutLoading" BackgroundColor="White">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Margin="0, 0, 0, 20" x:Name="lblMessage"/>
                <ActivityIndicator Color="LightBlue" IsRunning="True" />
            </StackLayout>
        </Grid>
  </ContentView.Content>
</ContentView>